	function isPassword(pass1, pass2) {
	    var COMPLEXPASS_PATTERN = "((?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{6,20})";
	 
	 	console.log('pass1 _' +pass1 + ' pass2_'+pass2);
	    if (pass1 !== pass2) {
