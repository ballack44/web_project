<script type="text/javascript">
				
		
	
	function validateInsertData()
	{
		var deviceIMEI = $('#inputIMEI').val();

		
		var errorMessage;
		   
	    var warError=false;
		
	    if(deviceIMEI === null || deviceIMEI === "" || deviceIMEI === 'undefined')
	    {
	        errorMessage="IMEI szám megadása kötelező!";
	        $.growl.error({ message: errorMessage });
	        warError=true;
	    }
	 

	 

	    if(warError)
	    {
	        return false;
	    }
	    return true;
	}
	 
	
</script>
