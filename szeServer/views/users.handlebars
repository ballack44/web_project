<script type="text/javascript">
$(document).ready(function() {
		
		
				
		//import the data
		$.ajax({
			url : '/_users/',
			type : 'get',
			contentType : 'application/json',
			dataType : 'json',
	        success : function(result) {

				
				if (result !== null && result !== 'undefined') {
											
					var dataSet = [];
				
					for (var i = 0; i < result.data.length; i++) {

						console.log(result.data[i]);
						dataSet.push(result.data[i]);							
					}				
					
					
				$('#table').dataTable({
					"data" : dataSet,
					"bPaginate": true,
                    "bLengthChange": true,
                    "bJQueryUI": true,
                    "bFilter": true,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": true,
                   	"lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                    "bStateSave": true,
                    "language" : {
						"lengthMenu" : "_MENU_ sor mutatása oldalanként",
						"zeroRecords" : "Nincs találat",
						"info" : "_PAGE_ / _PAGES_ Sorok száma: _TOTAL_",
						"infoEmpty" : "Nincs elérhető adattartalom",
						"infoFiltered" : "(_MAX_ sorból szűkítve)",
						"search" : "Keresés",
						"paginate" : {
							"next" : "Következő oldal",
							"previous" : "Előző oldal"
						}
					},

					"aoColumns" :  [
					             { 
					            	 "sTitle" : "Azonosító",
									 "class" : "center",
					            	 "data" : "user_id"
					            	 
					             },
					             { 
					            	 "data" : "user_name",
					            	 "class" : "center",
					            	 "sTitle" : "Felhasználónév"
					            	 
					             },
					             {
					            	 "data" : "user_email",
					            	 "class" : "center",	
					            	 "sTitle" : "E-mail cím"
					            	 
					             },
					             { 
					            	 "data" : "device_id", 
					            	 "class" : "center",
					            	 "sTitle" : "Eszköz Id"
					            	 
					             },
					             { 
					            	 "data" : "role_id", 
					            	 "class" : "center",
					            	 "sTitle" : "Jogosultság"
					            	
					             },
					             { 
					            	 "data" : "user_given_name",
					            	 "class" : "center",	 
					            	 "sTitle" : "Keresztnév"
					            	 
					             },
					             {
					            	 "data" : "user_sur_name",
					            	 "class" : "center",
					            	 "sTitle" : "Vezetéknév"
					            	 
					             },
								{
									"bSortable": false,
							      	"mRender": function(data, type, full) {
							      		
	    								return '<div class="col-md-6">'+'<a class="btn-primary btn btn-sm" href=/users/'+ full.user_id + '>' + 'Módosít' + '</a>'+'</div>'
	    								+ '<div class="col-md-6">'+'<a class="btn-danger btn btn-sm" href=/users/delete/'+ full.user_id + '>' + 'Töröl' + '</a>'+'</div>';
	  									
	  								}
						    	}					             
					          
					         ]
     
					
				});
				
									
		      }
				
			},
			error : function(data) {
				console.log('error!');
				console.log(data);

			}
		});
	});
</script>

